{
  "name":"VISCA PTZ",
  "type":"UDP",
  "path":"Protocol",
  
  "version":"0.1.0",
  "description":"Module to Controll PTZ Cameras via VISCA Protocoll",
  "url":"https://github.com/Fe-Lit/VISCA-Chataigne-module",

  "hasInput":true,
  "hasOutput":true, 

  "hideDefaultCommands":false,
  
  "defaults":
  {	
    "autoAdd":false
  },

  "parameters":
  {
    "Port":
    {
      "type":"Integer",
      "default":52381
    },
        "Device ID":
    {
      "type":"Integer",
      "min":0,
      "max":7
    },
        "IP":
    {
      "type":"String"
    }
  },

  "hideDefaultParameters": [ "autoAdd", "oscInput/localPort"],

  "scripts": 
  [
    "moduleScript.js"
  ],

  "values":
  {
    "Payload Type":
    {
      "type":"Enum"
    },
        "CAM_Power":
    {
      "type":"Boolean"
    },
    "CAM_Zoom"
    {
      "type":"Integer"
    },
    "Pan Position"
    {
      "type":"Integer"
    },
        "Tilt Position"
    {
      "type":"Integer"
    }
  },

  "commands":
  {
    
    "Custom command":
    {
      "menu":"",  
      "callback":"customCmd",
      "parameters":
      {
        "Value":
        {
          "type":"Integer",
          "min":0,
          "max":100,
          "default":0
        }
      }
    },
        "Set Zoom":
    {
      "menu":"Zoom",  
      "callback":"Zoom",
      "parameters":
      {
        "Speed":
        {
          "type":"Integer",
          "min":0,
          "max":100,
          "default":50
        },
        "Direction":
        {
          "type":"Integer"
        }
      }
    }
  }
}
